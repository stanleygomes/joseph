# EditorConfig ajuda a manter estilos de codificação consistentes para múltiplos
# desenvolvedores trabalhando no mesmo projeto em vários editores e IDEs.
# Para mais informações: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{kt,kts}]
indent_size = 4
continuation_indent_size = 4
max_line_length = 120

[*.{xml,yml,yaml,json}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
